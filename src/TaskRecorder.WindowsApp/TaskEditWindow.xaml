<Window x:Class="TaskRecorder.WindowsApp.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskRecorder.WindowsApp"
        mc:Ignorable="d"
        Title="タスクの編集" Height="Auto" Width="400" SizeToContent="Height">
    <StackPanel Margin="10">
        <TextBlock>タスクの編集</TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0">タスク名</TextBlock>
            <TextBox Grid.Row="0" Grid.Column="1"></TextBox>

            <TextBlock Grid.Row="1" Grid.Column="0">タスク省略名</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1"/>

            <TextBlock Grid.Row="2" Grid.Column="0">Code</TextBlock>
            <TextBox Grid.Row="2" Grid.Column="1"/>

            <TextBlock Grid.Row="3" Grid.Column="0">ID</TextBlock>
            <TextBox Grid.Row="3" Grid.Column="1" IsReadOnly="True"/>

            <TextBlock Grid.Row="4" Grid.Column="0">概要</TextBlock>
            <TextBox Grid.Row="4" Grid.Column="1" IsReadOnly="True"/>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button>Cancel</Button>
            <Button>OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
